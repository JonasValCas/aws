<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Registro de Usuarios</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <% if (locals.query && query.status === 'registered') { %>
    <div class="message success">
      Â¡Usuario registrado exitosamente!
    </div>
  <% } %>
  <h1>ðŸ‘¥ Usuarios Registrados</h1>
  <a href="/registrar" class="btn-registrar">Registrar Nuevo Usuario</a>
  <div class="usuarios">
    <% usuarios.forEach(usuario => { %>
      <div class="card">
        <img src="<%= usuario.foto_url ? usuario.foto_url : 'https://via.placeholder.com/150' %>" alt="Foto de <%= usuario.nombre %>" width="150">
        <h2><%= usuario.nombre %></h2>
        <p><%= usuario.email %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>